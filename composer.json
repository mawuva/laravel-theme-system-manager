{
    "name": "mawuekom/laravel-theme-system-manager",
    "description": "Support multi theme  for Laravel application",
    "keywords": [
        "mawuekom",
        "laravel-theme-system-manager"
    ],
    "homepage": "https://github.com/mawuekom/laravel-theme-system-manager",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ephra√Øm Seddor",
            "email": "seddorephraim7@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mawuekom\\LaravelThemeSystemManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mawuekom\\LaravelThemeSystemManager\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mawuekom\\LaravelThemeSystemManager\\LaravelThemeSystemManagerServiceProvider"
            ],
            "aliases": {
                "LaravelThemeSystemManager": "Mawuekom\\LaravelThemeSystemManager\\LaravelThemeSystemManagerFacade"
            }
        }
    }
}
